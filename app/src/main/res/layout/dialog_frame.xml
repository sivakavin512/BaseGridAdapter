<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_back">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/dialog_icon"
        android:src="@drawable/one"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_below="@+id/dialog_icon"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/closeClick"
        android:onClick="closeClick"
        android:layout_below="@+id/dialog_name"
        android:layout_alignLeft="@+id/dialog_icon"
        android:layout_alignStart="@+id/dialog_icon"
        android:layout_alignRight="@+id/dialog_icon"
        android:layout_alignEnd="@+id/dialog_icon" />
</RelativeLayout>